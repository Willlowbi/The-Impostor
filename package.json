{
  "name": "the-impostor-server",
  "version": "1.0.0",
  "description": "Backend server for The Impostor game",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server/index.js",
    "start": "node server/index.js",
    "client": "cd client && npm start",
    "build": "cd client && npm install && npm run build"
  },
  "dependencies": {
    "express": "^4.18.2",
    "socket.io": "^4.7.2",
    "cors": "^2.8.5",
    "axios": "^1.5.0",
    "uuid": "^9.0.0",
    "concurrently": "^7.6.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
