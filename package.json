{
  "name": "the-impostor",
  "version": "1.0.0",
  "description": "Online multiplayer impostor game with soccer players",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm start",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "concurrently": "^7.6.0",
    "cors": "^2.8.5",
    "express": "^5.1.0",
    "socket.io": "^4.8.1",
    "uuid": "^11.1.0"
  },
  "keywords": [
    "multiplayer",
    "game",
    "impostor",
    "soccer"
  ],
  "author": "",
  "license": "MIT"
}
